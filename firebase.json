{
  "hosting": [
      {
      "target": "public",
      "public": "docs",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites":[
        {
          "source":"**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "target": "stage",
      "public": "docs",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites":[
        {
          "source":"**",
          "destination": "/index.html"
        }
      ]
    }
  ]
}
